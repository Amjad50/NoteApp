<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/mainFragment">

    <fragment
            android:id="@+id/mainFragment"
            android:name="com.amjad.noteapp.ui.fragments.NotesListFragment"
            android:label="MainFragment"
            tools:layout="@layout/noteslist_fragment">
        <action
                android:id="@+id/action_mainFragment_to_noteEditFragment"
                app:destination="@id/noteEditFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
            android:id="@+id/noteEditFragment"
            android:name="com.amjad.noteapp.ui.fragments.NoteEditFragment"
            android:label="NoteEditFragment" />
</navigation>